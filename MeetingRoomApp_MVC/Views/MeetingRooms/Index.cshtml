@model IEnumerable<MeetingRoomApp.Domain.MeetingRoom>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="container">
    <div class="row">
@foreach (var item in Model) {
        <div class="card col-sm-3">
            <div class="card-header">
                @item.RoomName
            </div>
            <div class="card-body">
                @item.Location
                </div>
                <div class="card-footer">
                     <a asp-action="Edit" asp-route-id="@item.RoomNo" class="btn btn-sm btn-primary">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.RoomNo" class="btn btn-sm btn-info">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.RoomNo" class="btn btn-sm btn-warning">Delete</a>
                    </div>
        </div>
}
</div>
    </div>
    
